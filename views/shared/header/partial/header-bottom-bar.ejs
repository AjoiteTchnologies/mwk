    if(typeof headerCategory == 'object' && headerCategory && headerCategory != ''){    
        headerCategory.forEach(function(category, index){
%>
                <a href="/catalog/<%- category.name %>/"><%- category.name %></a>
<%
        
        });
    }
%>
    </div>
    <div class="cart-block fr pr10">
        <span class="login">
            <a href="javascript:void(0)" data-id="signup-form" class="popup">Signup </a>/
            <a href="javascript:void(0)" data-id="login-form" class="popup"> Login</a>
