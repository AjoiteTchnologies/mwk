<section class="popup-data" id="signup-form">
    <div class="message-box success-message"></div>
    <div class="message-box failure-message"></div>

    <h1>Signup</h1><br/>
    <form data-action="/user/create">

        <div class="form-group">
            <label>Full Name</label>
            <input type="text" name="fullname" class="required">
            <label class="error-msg"></label>
        </div>

        <div class="form-group">
            <label>Email</label>
            <input type="text" name="email" class="required email">
            <label class="error-msg"></label>
        </div>

        <div class="form-group">
            <label>Password</label>
            <input type="text" name="password" class="required">
            <label class="error-msg"></label>
        </div>

        <div class="form-group">
            <label>Confirm Password</label>
            <input type="text" name="confirmPassword" class="required">
            <label class="error-msg"></label>
        </div>

        <div class="form-group">
            <label>Mobile No.</label>
            <input type="text" name="mobile" class="required mobile">
            <label class="error-msg"></label>
        </div>

        <input class="pdp-btn signup-login" type="submit" value="Sign Up" />
    </form>
</section>

<section class="popup-data" id="login-form">
    <h1>Login</h1>
    <form data-action="/user/find">

        <div class="form-group">
            <label>User Name / Email</label>
            <input type="text" name="email" class="required">
            <label class="error-msg"></label>
        </div>

        <div class="form-group">
            <label>Password</label>
            <input type="text" name="password" class="required">
            <label class="error-msg"></label>
        </div>

        <input class="pdp-btn signup-login" type="submit" value="Log In" />
    </form>
</section>