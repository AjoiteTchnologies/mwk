<div class="message-box success-message"></div>
<div class="message-box failure-message"></div>


<%
	if(typeof cms == 'object' && cms && cms != ''){
		if(cms.length > 0){
%>
			<div class="cms-links">
				<form action="/cms/create/<%- cms[0].name %>" method="post">
					<div class="form-group">
						<label>Type</label>
						<div class="radio-group">
<%
							if(cms[0].type == 'page'){
%>						
								<input type="radio" name="cms-type" value="page" checked>
								<label>Page</label>
								<input type="radio" name="cms-type" value="block">
								<label>Block</label>
<%
							}
							else{
%>
								<input type="radio" name="cms-type" value="page">
								<label>Page</label>
								<input type="radio" name="cms-type" value="block" checked>
								<label>Block</label>
<%
							}
%>
						</div>
					</div>

					<div class="form-group">
						<label>Name</label>
						<input type="text" name="name" value="<%- cms[0].name %>" class="required" minlength="20" maxlength="50" >
						<label class="error-msg"></label>
					</div>

					<div class="form-group block-page">
						<label>Page Type</label>
						<select>
							<option value="homepage">Home Page</option>
							<option value="categorypage">Catalog Page</option>
							<option value="pdppage">Product Page</option>
						</select>
						<label class="error-msg"></label>
					</div>

					<div class="form-group">
						<label>Url / Identifier</label>
						<input type="text" name="identifier" value="<%- cms[0].idUrl %>" class="required space">
						<label class="error-msg"></label>
					</div>

					<div class="form-group">
						<label>Content</label>
						<textarea name="content" value="<%- cms[0].content %>" class="required"></textarea>
						<label class="error-msg"></label>
					</div>

					<input type="submit" name="" class="pdp-btn create-cms" value="Update">
					<a href="/cms/list" class="view-cms">View List</a>
				</form>	
			</div>
<%
		}
	}
	else{
%>
		<div class="cms-links">
			<form action="/cms/create" method="post">
				<div class="form-group">
					<label>Type</label>
					<div class="radio-group">
						<input type="radio" name="cms-type" checked value="page" class="cms-pagetype">
						<label>Page</label>
						<input type="radio" name="cms-type" value="block" class="cms-pagetype">
						<label>Block</label>
					</div>
				</div>

				<div class="form-group">
					<label>Name</label>
					<input type="text" name="name" class="required" minlength="20" maxlength="50" >
					<label class="error-msg"></label>
				</div>

				<div class="form-group block-page">
					<label>Page Type</label>
					<select>
						<option value="homepage">Home Page</option>
						<option value="categorypage">Catalog Page</option>
						<option value="pdppage">Product Page</option>
					</select>
					<label class="error-msg"></label>
				</div>

				<div class="form-group">
					<label>Url / Identifier</label>
					<input type="text" name="identifier" class="required space">
					<label class="error-msg"></label>
				</div>

				<div class="form-group">
					<label>Content</label>
					<textarea name="content" class="required"></textarea>
					<label class="error-msg"></label>
				</div>

				<input type="submit" name="" class="pdp-btn create-cms" value="Create">
				<a href="/cms/list" class="view-cms">View List</a>
			</form>	
		</div>

<%
	}
%>