<div class="message-box success-message"></div>
<div class="message-box failure-message"></div>


<%
	if(typeof cms == 'object' && cms && cms != ''){
		if(cms.length > 0){
%>
			<div class="cms-links">
				<form action="/cms/create/<%- cms[0].idUrl %>" method="post">
					<div class="form-group">
						<label>Type</label>
						<div class="radio-group">
<%
							if(cms[0].type == 'page'){
%>						
								<input type="radio" name="cms-type" value="page" checked>
								<label>Page</label>
								<input type="radio" name="cms-type" value="block">
								<label>Block</label>
<%
							}
							else{
%>
								<input type="radio" name="cms-type" value="page">
								<label>Page</label>
								<input type="radio" name="cms-type" value="block" checked>
								<label>Block</label>
<%
							}
%>
						</div>
					</div>

					<div class="form-group">
						<label>Name</label>
						<input type="text" name="name" value="<%- cms[0].name %>">
					</div>

					<div class="form-group">
						<label>Url / Identifier</label>
						<input type="text" name="identifier" value="<%- cms[0].idUrl %>">
					</div>

					<div class="form-group">
						<label>Content</label>
						<input type="text" name="content" value="<%- cms[0].content %>">
					</div>

					<input type="submit" name="" class="pdp-btn create-cms" value="Update">
					<a href="/cms/view" class="view-cms">View List</a>
				</form>	
			</div>
<%
		}
	}
	else{
%>
		<div class="cms-links">
			<form action="/cms/create" method="post">
				<div class="form-group">
					<label>Type</label>
					<div class="radio-group">
						<input type="radio" name="cms-type" value="page">
						<label>Page</label>
						<input type="radio" name="cms-type" value="block">
						<label>Block</label>
					</div>
				</div>

				<div class="form-group">
					<label>Name</label>
					<input type="text" name="name">
				</div>

				<div class="form-group">
					<label>Url / Identifier</label>
					<input type="text" name="identifier">
				</div>

				<div class="form-group">
					<label>Content</label>
					<input type="text" name="content">
				</div>

				<input type="submit" name="" class="pdp-btn create-cms" value="Create">
				<a href="/cms/view" class="view-cms">View List</a>
			</form>	
		</div>

<%
	}
%>